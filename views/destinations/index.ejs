<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<div class="d-flex align-items-center justify-content-between mt-2 my-3">
  <h1 class="mt-2 text-uppercase">All Destinations</h1>
  <a class="btn btn-warning text-uppercase" href="/destinations/new"
    >Add Destination</a
  >
</div>

<ul class="px-0">
  <% for (let destination of destinations.reverse()) { %>

  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4" id="card-image">
        <img
          crossorigin="anonymous"
          class="img-fluid rounded w-100 object-fit-cover"
          alt=""
          src="<%= destination.images.length ? destination.images[0].cardImage : 'https://res.cloudinary.com/dkrbcwovv/image/upload/ar_1,c_crop/v1711358618/GourmetCity/adnivwun7lk1dy87iu4f.png' %>"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= destination.title %></h5>
          <p class="card-text text-truncate"><%= destination.description %></p>
          <p class="card-text">
            <small class="text-secondary"><%= destination.location %></small>
          </p>
          <a
            href="/destinations/<%= destination._id %>"
            class="btn btn-primary text-uppercase"
            >View Details</a
          >
        </div>
      </div>
    </div>
  </div>

  <% } %>
</ul>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const destinations = {features: <%- JSON.stringify(destinations) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>
